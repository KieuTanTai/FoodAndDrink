{
    "rules-path": {
        "platform-rules": {
            "path": "PlatformRules/platform-rules.json",
            "enabled": true
        }, 
        "frontend-rules": {
            "path": "PlatformRules/FrontendRules/frontend-rules.json",
            "enabled": true
        },
        "backend-rules": {
            "path": "PlatformRules/BackendRules/backend-rules.json",
            "enabled": true
        }

    },
    "custom-rules": {
        "expiry-cookie": {
            "type": "cookie-expiry",
            "maxAgeDays": 7,
            "enabled": true
        },
        "expiry-try-timeout": {
            "type": "try-timeout",
            "maxTryTimes": 3,
            "enabled": true
        },
        "expiry-fetch-timeout": {
            "type": "fetch-timeout",
            "maxFetchTimeout": 500,
            "enabled": true
        },
        "message-timeout": {
            "type": "message-timeout",
            "maxMessageTimeout": 3000,
            "enabled": true
        }
    },
    "rules-version": "1.0.0"
}